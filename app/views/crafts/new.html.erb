<br/><div class="row">
  <div class="col-md-8">
    <h4>STEP 1： 作品を貸してみましょう</h4><hr/>
      <%= form_for @craft do |f| %>

        <div class="form-group">
          <label>作品の名前</label>
          <%= f.text_field :listing_name, placeholder: "作品名", class: "form-control", required: true %>
        </div>

        <div class="form-group">
          <label>作品の紹介</label>
          <%= f.text_area :summary, rows: 5, placeholder: "作品の紹介文", class: "form-control", required: true %>
        </div>


      <div class="text-center">
        <%= f.submit "保存", class: "btn btn-form" %>
      </div>

    <% end %>

    </div>
  </div>
